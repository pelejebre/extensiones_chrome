{
  "manifest_version": 3,
  "name": "FocusZone v2",
  "version": "1.0.0",
  "description": "Temporizador Pomodoro con tracking automático de tiempo por dominio y estadísticas de productividad",
  "permissions": [
    "storage",
    "tabs",
    "notifications",
    "alarms",
    "webNavigation",
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "128": "icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["blocked.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
