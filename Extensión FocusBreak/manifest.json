{
  "manifest_version": 3,
  "name": "FocusBreak",
  "version": "1.0",
  "description": "Recordatorios peri√≥dicos para hacer pausas activas y cuidar tu salud mientras trabajas.",
  "permissions": [
    "alarms",
    "notifications",
    "storage"
  ],
  "optional_permissions": [
    "system.display"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon.png"
    }
  },
  "icons": {
    "48": "icon.png"
  }
}
